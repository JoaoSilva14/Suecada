<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    tools:context="com.example.suecada.MainActivity"
    tools:ignore="MergeRootFrame" >

    <Button
        android:id="@+id/sueca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/suecaital"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/suecaital"
        android:layout_marginTop="77dp"
        android:onClick="EcraSueca"
        android:text="@string/sueca"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/suecaital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/sueca"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:onClick="EcraItaliana"
        android:text="@string/italiana"
        android:textColor="#FFFFFF" />

</RelativeLayout>

